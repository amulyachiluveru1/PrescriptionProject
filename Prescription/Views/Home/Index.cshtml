@model IEnumerable<Prescription>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2>Prescriptions</h2>
    <a asp-controller="Prescription" asp-action="Add" class="btn btn-primary">Add New Prescription</a>
</div>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>Medication Name</th>
            <th>Fill Status</th>
            <th>Cost</th>
            <th>Request Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.MedicationName</td>
                <td>@p.FillStatus</td>
                <td>@p.Cost.ToString("C")</td>
                <td>@p.RequestTime.ToString("MM/dd/yyyy HH:mm")</td>
                <td>
                    <a asp-controller="Prescription"
                       asp-action="Edit"
                       asp-route-id="@p.PrescriptionId"
                       asp-route-slug="@p.Slug"
                       class="btn btn-sm btn-outline-secondary me-1">Edit</a>

                    <a asp-controller="Prescription"
                       asp-action="Delete"
                       asp-route-id="@p.PrescriptionId"
                       asp-route-slug="@p.Slug"
                       class="btn btn-sm btn-outline-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
