@model Prescription

@{
    var isNew = Model.PrescriptionId == 0;
    var title = isNew ? "Add Prescription" : "Edit Prescription";
}

<h3>@title</h3>

<form asp-controller="Prescription" asp-action="Save" method="post" class="mt-3">
    <input type="hidden" asp-for="PrescriptionId" />
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label class="form-label">Medication Name</label>
        <input asp-for="MedicationName" class="form-control" />
        <span asp-validation-for="MedicationName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Fill Status</label>
        <select asp-for="FillStatus" class="form-select" asp-items="ViewBag.FillStatuses">
        </select>
        <span asp-validation-for="FillStatus" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Cost</label>
        <input asp-for="Cost" class="form-control" type="number" step="0.01"/>
        <span asp-validation-for="Cost" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Request Time</label>
        <input class="form-control" value="@Model.RequestTime.ToString("MM/dd/yyyy HH:mm")" readonly />
        <div class="form-text">RequestTime is set when the prescription is created and is not changed while editing.</div>
    </div>

    <button type="submit" class="btn btn-success me-2">Save</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
